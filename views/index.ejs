<%- include("partials/header") %>


<div class="container">
       <header class="jumbotron">
           <div class="container">
              <h1>Welcome to the camp site</h1>
              <p>View hand-picked campgrounds from all over the world</p>
              <p>
                <a class="btn btn-primary btn-large" href="/campground/new">Add New Campground</a>
             </p>
           </div>
         
       </header>
 <div class="row">
    <% camp.forEach(function(camping){ %>
        <div class="col-md-4 col-sm-6">
            <div class="thumbnail">
                <img src="<%=camping.image%>" >
                <div class="caption">
                    <h4><%= camping.name %></h4>
                </div>
                <p>
                    <a href="/campground/<%= camping._id%>" class="btn btn-primary">More info</a>
                </p>
            </div>
        </div>
      
    <% }) %>
   
 </div>  
</div> 
<%- include("partials/footer")%>
