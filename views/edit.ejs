<%- include("partials/header") %>
<div class="container">
    <div class="row">
        <h1 style="text-align:center;">Edit a campground <%=campground.name%></h1>
        <div style="width:30%; margin: 0 auto;">
                    <form action="/campground/<%=campground._id%>/edit?_method=PUT" method="POST">
                        <div class="form-group">
                      <input class="form-control" type="text" value="<%=campground.name%>" name="edit[name]">
                        </div>
                        <div class="form-group">
                      <input class="form-control" type="text" value="<%=campground.image%>" name="edit[image]">
                        </div>
                        <div class="form-group"></div>
                      <input class="form-control" type="text" value="<%=campground.description%>" name="edit[description]">
                        </div>
                        <div class="form-group"></div>
                      <button class="btn btn-lg btn-primary btn-block" >submit</button>
                        </div>
                      
                    </form>
        </div>            
    </div>    
</div>       
<%- include("partials/footer") %>